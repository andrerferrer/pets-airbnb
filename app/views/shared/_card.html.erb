<div class="testing-card-product">
  <div class="product-img"style="background-image: url('<%= pet.photo %>')">
  </div>
  <div class="testing-card-product-infos">
    <h2><%= pet.name %></h2>
    <h3><%= pet.species %></h3>
    <p><%= pet.description %></p>
    <h3>Price per day R$<%= pet.price %></h3>
    <form class="form-inline">
      <p><%= link_to "back to available pets", pets_path, class: "button" %></p>
      <% if @pet.owner == current_user %>
      <p><%= link_to "You already own this pet!", pets_path(@pet), class: "button" %></p>
      <% else %>
      <p><%= link_to "Nuzzle this pet", new_pet_booking_path(@pet), class: "button" %></p>
      <% end %>
    <br>
    </form>
  </div>
</div>
